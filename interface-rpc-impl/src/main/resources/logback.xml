<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="log.context.name" value="swift-rpc" />
	<property name="log.charset" value="UTF-8" />
	<property name="logback.level" value="info" />
	<property name="log.pattern" value="[%-5level] %date --%thread-- [%logger] %msg %n" />
	<contextName>${log.context.name}</contextName>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level %logger{60} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="${log.context.name}" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>${log.charset}</Encoding>
		<file>/home/webserver/logs/java/${log.context.name}/web.log</file>
		<prudent>true</prudent>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/home/webserver/logs/java/${log.context.name}/log.%d{yyyyMMddHH}
			</fileNamePattern>
		</rollingPolicy>
		<layout>
			<pattern>${log.pattern}</pattern>
		</layout>
	</appender>
	<logger name="com.igool">
		<level value="${logback.level}" />
		<appender-ref ref="${log.context.name}" />
	</logger>
	<root level="${logback.level}">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
